@model NIDO_TimeAttandance_MVC.Areas.Payroll.Models.AdvanceModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
    <div class="login-form-area mg-t-30 mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3"></div>
                @using (Ajax.BeginForm("SaveAdvance", "Advance", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-lg-12">
                        <div class="login-bg">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-title">
                                        <h1>Create Advance</h1>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Employee</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8" id="kids">
                                        <div class="login-input-area">
                                            @Html.DropDownListFor(model => model.EmpId, ViewBag.Employees as IEnumerable<SelectListItem>, "Please Select Employee", new { @class = "form-control m-input", required = "*", id = "EmpId" })
                                            @Html.ValidationMessageFor(model => model.EmpId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Apply Date</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8 data-custon-pick data_1" id="kids">
                                        <div class="login-input-area">
                                            <div class="input-group date">
                                                @Html.TextBoxFor(model => model.ApplyDate, new { @class = "form-control", placeholder = "Please Enter Apply Date", autocomplete = "off" })
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Advance Start Date</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8 data-custon-pick data_1" id="kids">
                                        <div class="login-input-area">
                                            <div class="input-group date">
                                                @Html.TextBoxFor(model => model.AdvanceStartDate, new { @class = "form-control", placeholder = "Please Enter Advance Start Date", autocomplete = "off" })
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Advance Maturity Date</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8 data-custon-pick data_1">
                                        <div class="login-input-area">
                                            <div class="input-group date">
                                                @Html.TextBoxFor(model => model.AdvanceMaturityDate, new { @class = "form-control", placeholder = "Please Enter Advance Maturity Date", autocomplete = "off" })
                                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Advance Amount</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8 " id="kids">
                                        <div class="login-input-area">

                                            @Html.TextBoxFor(model => model.AdvanceAmount, new { @class = "form-control", placeholder = "Please Enter Advance Amount", autocomplete = "off" })



                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Advance Description</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8 " id="kids">
                                        <div class="login-input-area">
                                            @Html.TextBoxFor(model => model.AdvanceDesc, new { @class = "form-control", placeholder = "Please Enter Advance Description", autocomplete = "off" })

                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4"></div>
                                <div class="col-lg-8">
                                    <div class="login-button-pro">
                                        <button type="submit" class="login-button login-button-lg">Save Advance</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-lg-3"></div>
            </div>
            
        </div>
    </div>
