@model NIDO_TimeAttandance_MVC.Areas.Payroll.Models.DeductionModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<h2>Create</h2>
<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("SaveDeduction", "Deduction", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Create Deduction</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Deduction Name</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.DeductionName, new  { placeholder="Please Enter Deduction Name", required=""})
                                        
                                        @Html.ValidationMessageFor(model => model.DeductionName, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                                @*<div class="col-md-2">
                                        <button type="button" class="btn btn-success" onclick="addkid()" value="Add">
                                            <i class="fa fa-plus" aria-hidden="true"></i>
                                        </button>
                                    </div>*@
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Value Type</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.DropDownListFor(model => model.ValueTypeId,ViewBag.ValueType as IEnumerable<SelectListItem>,"Please Select Value Type", new { @class = "form-control m-input", id = "ValueTypeId" })
                                        
                                        @Html.ValidationMessageFor(model => model.ValueTypeId, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>
                                </div>

                            </div>
                        </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Deduction Value</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8" id="kids">
                                        <div class="login-input-area">
                                            @Html.TextBoxFor(model => model.DeductionValue, new { placeholder="Please Enter Deduction Value",required=""})
                                            
                                            @Html.ValidationMessageFor(model => model.DeductionValue, "", new { @class = "text-danger" })
                                            <i class="fa fa-user login-user" aria-hidden="true"></i>
                                        </div>

                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-4"></div>
                                <div class="col-lg-8">
                                    <div class="login-button-pro">
                                        <button type="submit" class="login-button login-button-lg">Save Deduction</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    <div class="col-lg-3"></div>
                </div>
            }
        </div>
    </div>

