
@model NIDO_TimeAttandance_MVC.Areas.Payroll.Models.EOBIModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("Update", "EOBI", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.EOBIId)
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Update EOBI</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>EOBI Name</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.EOBIName, new { placeholder = "Please Enter Allowance Name", required = "" })
                                        @Html.ValidationMessageFor(model => model.EOBIName, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Value Type</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.DropDownListFor(model => model.ValueTypeId, ViewBag.ValueType as IEnumerable<SelectListItem>, "Please Select Value Type", new { @class = "form-control m-input", required = "*", id = "ValueTypeId" })
                                        @Html.ValidationMessageFor(model => model.ValueTypeId, "", new { @class = "text-danger" })

                                    </div>

                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>EOBI Value</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.EOBIValue, new { placeholder = "Please Enter Allowance Value", required = "", type = "number", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.EOBIValue, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Category</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as IEnumerable<SelectListItem>, "Please Select Category ", new { @class = "form-control m-input", required = "*", id = "DedConId" })
                                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })

                                    </div>

                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Update EOBI</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
        
    </div>
</div>



