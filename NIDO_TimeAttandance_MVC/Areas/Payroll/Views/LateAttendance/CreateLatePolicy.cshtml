@model NIDO_TimeAttandance_MVC.Areas.Payroll.Models.LatePolicyMasterModel

@{
    ViewBag.Title = "CreateLatePolicy";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>

            @using (Ajax.BeginForm("SaveLatePolicy", "LateAttendance", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
         

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Create Late Policy</h1>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Late Policy Name</p>
                                    </div>
                                </div>
                                <div class="col-md-8 data-custon-pick data_1" id="kids">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.LatePolicyName, new { @class = "form-control", placeholder = "Please Enter Late Policy Name", })


                                    </div>
                                </div>

                            </div>
                        </div>
                     
                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Save Late Policy</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>

    </div>