
@model NIDO_TimeAttandance_MVC.Areas.Payroll.Models.LateAttendanceModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("UpdateLateAttendanceDetail", "LateAttendance", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model=>model.LatePolicyId)
                @Html.HiddenFor(c => c.Id)

                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Edit Late Timing</h1>
                                </div>
                            </div>
                        </div>
                       
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Start Time</p>
                                    </div>
                                </div>
                                <div class="col-md-8 data-custon-pick data_1" id="kids">
                                    <div class="login-input-area">
                                            @Html.TextBoxFor(model => model.Start_Time, new { @class = "form-control", placeholder = "Please Enter Start Time", mask = "99:99" })
                                       
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>End Time</p>
                                    </div>
                                </div>
                                <div class="col-md-8 data-custon-pick data_1">
                                    <div class="login-input-area">
                                            @Html.TextBoxFor(model => model.End_Time, new { @class = "form-control", placeholder = "Please Enter End Time", mask = "99:99" })
                                        
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Dedcut Amount (%)</p>
                                    </div>
                                </div>
                                <div class="col-md-8 " id="kids">
                                    <div class="login-input-area">

                                        @Html.TextBoxFor(model => model.Deduct_Percent, new { @class = "form-control", placeholder = "Please Enter Deduct Amount (%)", type = "number" })


                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Days</p>
                                    </div>
                                </div>
                                <div class="col-md-8 " id="kids">
                                    <div class="login-input-area">

                                        @Html.TextBoxFor(model => model.Days, new { @class = "form-control", placeholder = "Please Enter Days", type = "number" })


                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Save Late Timing</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
        
    </div>
</div>

