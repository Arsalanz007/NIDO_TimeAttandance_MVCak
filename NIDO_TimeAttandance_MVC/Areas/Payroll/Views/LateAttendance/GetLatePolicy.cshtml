@model NIDO_TimeAttandance_MVC.Areas.Payroll.Models.LatePolicyMasterModel
@{
    ViewBag.Title = "GetLatePolicy";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">

                            <h1><span class="table-project-n">Late Deduction Timing</span></h1>
                            <div class="sparkline13-outline-icon">
                                <span class="sparkline13-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span><i class="fa fa-wrench"></i></span>
                                <span class="sparkline13-collapse-close"><i class="fa fa-times"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Late Policy Name</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        
                                        @Html.TextBoxFor(model => model.LatePolicyName, new { placeholder = "Please Enter Late Policy Name", required = "" })
                                        @Html.ValidationMessageFor(model => model.LatePolicyName, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true" data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead>
                                    <tr>
                                        <th>Serial No</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                        <th>Percent</th>

                                        <th>
                                            Action
                                            <div class="button-drop-style-one" style="float:right">
                                                <button type="button" class="btn btn-custon-four btn-success primary-btn-cl" onclick="redirect('/Payroll/LateAttendance/Create/'+@Model.LatePolicyId)">
                                                    Add New
                                                    <i class="adminpro-icon adminpro-avatar"></i>
                                                </button>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.LateAttendanceModelList.Select((x, i) => new { Data = x, Index = i + 1 }))
                                    {
                                        <tr>
                                            <td>
                                                @item.Index
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Data.Start_Time)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Data.End_Time)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Data.Deduct_Percent)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Data.Id }, new { @class = "btn btn-custon-four btn-warning warning-btn-cl" })|
                                                <input type="button" value="Delete" class="btn btn-custon-four btn-danger danger-btn-cl" onclick="ActionLinkAlert('/Payroll/LateAttendance/DeleteLateAttendance',@item.Data.Id)" />
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

