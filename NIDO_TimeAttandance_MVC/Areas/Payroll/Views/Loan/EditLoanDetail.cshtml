@model NIDO_TimeAttandance_MVC.Areas.Payroll.Models.LoanDetailModel

@{
    ViewBag.Title = "EditLoanDetail";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

    <div class="login-form-area mg-t-30 mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3"></div>
                @using (Ajax.BeginForm("UpdateLoanDetail", "Loan", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.LoanDetailId)
                    @Html.HiddenFor(model => model.LoanId)
                    <div class="col-lg-12">
                        <div class="login-bg">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="login-title">
                                        <h1>Update Loan Installment</h1>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Loan Installment Date</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="login-input-area">
                                            @{ string month = Convert.ToDateTime(Model.LoanInstallmentDate.Value).ToString("MMM/yyyy");}
                                            @Html.DisplayFor(modelItem => month)
                                            <i class="fa fa-user login-user" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Loan Status</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="login-input-area">
                                            @Html.DropDownListFor(model => model.LoanStatusId, ViewBag.LoanStatus as IEnumerable<SelectListItem>, "Please select Loan Status", new { @class = "form-control m-input", id = "LoanStatusId" })


                                            @Html.ValidationMessageFor(model => model.LoanStatusId, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-2">
                                        <div class="login-input-head">
                                            <p>Installment Amount Value</p>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="login-input-area">
                                            @Html.TextBoxFor(model => model.InstallmentAmount, new { placeholder = "Please Enter Amount", required = "" })


                                            @Html.ValidationMessageFor(model => model.InstallmentAmount, "", new { @class = "text-danger" })
                                            <i class="fa fa-user login-user" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4"></div>
                                <div class="col-lg-8">
                                    <div class="login-button-pro">
                                        <button type="submit" class="login-button login-button-lg">Update Installment</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-lg-3"></div>
            </div>
        </div>
    </div>