@model NIDO_TimeAttandance_MVC.Areas.Payroll.Models.TaxModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("SaveTax", "Tax", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Create Tax</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Tax Name</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.TaxName, new { placeholder = "Please Enter Tax Name", required = "" })
                                        @Html.ValidationMessageFor(model => model.TaxName, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Value Type</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.DropDownListFor(model => model.ValueTypeId, ViewBag.ValueType as IEnumerable<SelectListItem>, "Please Select Value Type", new { @class = "form-control m-input", required = "*", id = "ValueTypeId" })
                                        @Html.ValidationMessageFor(model => model.ValueTypeId, "", new { @class = "text-danger" })

                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Tax Value</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.TaxValue, new { placeholder = "Please Enter Tax Value", required = "" })
                                        @Html.ValidationMessageFor(model => model.TaxValue, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Salary Start Slab</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.SalaryStartSlab, new { placeholder = "Please Enter Salary Start Slab", required = "" })
                                        @Html.ValidationMessageFor(model => model.SalaryStartSlab, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Salary End Slab</p>
                                    </div>
                                </div>
                                <div class="col-md-8" id="kids">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.SalaryEndSlab, new { placeholder = "Please Enter Salary End Slab", required = "" })
                                        @Html.ValidationMessageFor(model => model.SalaryEndSlab, "", new { @class = "text-danger" })
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Save Tax</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
        }
    </div>
</div>