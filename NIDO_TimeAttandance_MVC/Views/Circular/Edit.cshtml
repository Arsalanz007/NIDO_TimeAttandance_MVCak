@model NIDO_TimeAttandance_MVC.Models.ModelCircular
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Assests/Dashboard/assets/vendor/bootstrap-colorpicker/css/bootstrap-colorpicker.css" rel="stylesheet" />

<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("Update", "Circular", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x=>x.ID)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Create Circular</h1>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Start Date</p>
                                    </div>
                                </div>
                                <div class="form-group data-custon-pick data_1 col-md-7">
                                    <div class="input-group date">
                                        @Html.TextBoxFor(model => model.StartDate, "{0:MM/dd/yyyy}", new { @class = "form-control", placeholder = "Please Enter start date" })
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>End Date</p>
                                    </div>
                                </div>
                                <div class="form-group data-custon-pick data_1 col-md-7">
                                    <div class="input-group date">
                                        @Html.TextBoxFor(model => model.EndDate, "{0:MM/dd/yyyy}", new { @class = "form-control", placeholder = "Please Enter end date" })
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Circular Text</p>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="login-input-area">
                                        @Html.TextAreaFor(model => model.CircularText, new { rows = "05", style = "resize:none;", placeholder = "Please Enter Circular text", required = "", @class = "form-control input-lg textarea-editor" })
                                        @Html.ValidationMessageFor(model => model.CircularText, "", new { @class = "error required" }, "label")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>