@model NIDO_TimeAttandance_MVC.Models.ModelCompany

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("SaveCompany", "Company", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Create Company</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="login-input-head">
                                        <p>Company Name</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.CompanyDesc, new { placeholder = "Please Enter Company Name", required = "", autocomplete = "off" })
                                        @Html.ValidationMessageFor(model => model.CompanyDesc, "", new { @class = "error required" }, "label")
                                        <i class="fa fa-user login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="login-input-head" >
                                        <p>Company Address</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.CompanyAdd, new { placeholder = "Please Enter Company Address", required = "", autocomplete = "off" })
                                        @Html.ValidationMessageFor(model => model.CompanyAdd, "", new { @class = "error required" }, "label")
                                        <i class="fa fa-building login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="login-input-head">
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.CompanyPhone, new { placeholder = "Please Enter Company Phone", required = "", autocomplete = "off" })
                                        @Html.ValidationMessageFor(model => model.CompanyPhone, "", new { @class = "error required" }, "label")
                                        <i class="fa fa-phone login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="login-input-head">
                                        <p>Fax</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.CompanyFax, new { placeholder = "Please Enter Company Fax", required = "", autocomplete = "off" })
                                        @Html.ValidationMessageFor(model => model.CompanyFax, "", new { @class = "error required" }, "label")
                                        <i class="fa fa-fax login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="login-input-head">
                                        <p>Website</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.CompanyWeb, new { placeholder = "Please Enter Company website", required = "", autocomplete = "off", pattern = "https?://.+" })
                                        @Html.ValidationMessageFor(model => model.CompanyWeb, "", new { @class = "error required" }, "label")
                                        <i class="fa fa-cloud login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Save Company</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
