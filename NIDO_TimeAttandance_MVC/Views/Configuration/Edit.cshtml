@model NIDO_TimeAttandance_MVC.Models.ModelConfiguration
@{

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("Update", "Configuration", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {@Html.HiddenFor(model => model.ID)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-lg-12">
                <div class="login-bg">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="login-title">
                                <h1>Create Template</h1>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-2">
                                <div class="login-input-head">
                                    <p>Template Name</p>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="login-input-area">
                                    @Html.DropDownListFor(model => model.TemplateID, ViewBag.TemplateName as IEnumerable<SelectListItem>, "Please Select Template Name", new { @class = "form-control m-input", required = "*" })
                                    @Html.ValidationMessageFor(model => model.TemplateID, "", new { @class = "error required" }, "label")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-2">
                                <div class="login-input-head">
                                    <p>Template Description</p>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="login-input-area">

                                    @Html.TextAreaFor(model => model.Discription, new { rows = "20", style = "resize:none;width:400px;", placeholder = Html.DisplayNameFor(m => m.Discription), @class = "form-control input-lg textarea-editor" })
                                    @Html.ValidationMessageFor(model => model.Discription, "", new { @class = "error required" }, "label")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4"></div>
                        <div class="col-lg-8">
                            <div class="login-button-pro">
                                <button type="submit" class="login-button login-button-lg">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/script-custom-editor.js"></script>

