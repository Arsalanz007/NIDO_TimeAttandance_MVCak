@model NIDO_TimeAttandance_MVC.Models.ModelConfiguration

@using System.Web.Optimization

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


@Styles.Render("~/bundles/switch_Css")
<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("UpdateEmail", "Configuration", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(x => x.ID)
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Edit Email Configuration Settings</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Sender Email Address</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.SenderEmail, new { placeholder = "Please Enter Sender Email", required = "" })
                                        @Html.ValidationMessageFor(model => model.SenderEmail, "", new { @class = "error required" }, "label")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Sender Email Address Password</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.PasswordFor(model => model.Password, new { placeholder = "Please Enter Sender Email Password", required = "" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error required" }, "label")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Smtp Address /Host Name</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.Host, new { placeholder = "smtp.gmail.com", required = "" })
                                        @Html.ValidationMessageFor(model => model.Host, "", new { @class = "error required" }, "label")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Port No</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.Port, new { placeholder = "Please Enter Port Number", required = "" })
                                        @Html.ValidationMessageFor(model => model.Port, "", new { @class = "error required" }, "label")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Active/In-Active</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="switch switch-sm switch-primary">
                                        @Html.CheckBoxFor(model => model.IsActive, new { name = "switch", type = "checkbox", @data_plugin_ios_switch = "" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/switch")
