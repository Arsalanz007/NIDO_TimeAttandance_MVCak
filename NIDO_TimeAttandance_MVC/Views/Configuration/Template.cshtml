@model NIDO_TimeAttandance_MVC.Models.ModelConfiguration

@{
    ViewBag.Title = "Template";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<style>
    .hintdailog {
        border: 1px solid #e5e6e7;
        border-radius: 5px;
        margin-left: 10px;
        z-index: 999;
        margin-top: 0px;
    }
</style>

<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("SaveTemplate", "Configuration", new AjaxOptions { HttpMethod = "POST",OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Create Template</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Template Name</p>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="login-input-area">
                                        @Html.DropDownListFor(model => model.TemplateName, ViewBag.TemplateName as IEnumerable<SelectListItem>, "Please Select Template Name", new { @class = "form-control m-input", required = "*" })
                                        @Html.ValidationMessageFor(model => model.TemplateName, "", new { @class = "error required" }, "label")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Template Description</p>
                                    </div>
                                </div>
                                <div class="col-md-7" style="padding:0 10px;">
                                    <div class="login-input-area">

                                        @Html.TextAreaFor(model => model.Discription, new { rows = "20", style = "resize:none;width:400px;", placeholder = Html.DisplayNameFor(m => m.Discription), @class = "form-control input-lg textarea-editor" })
                                        @Html.ValidationMessageFor(model => model.Discription, "", new { @class = "error required" }, "label")
                                    </div>
                                </div>
                                <div class="col-lg-3">

                                    <div class="hintdailog">
                                        <div class="login-title text-center">
                                            <h1>Hints</h1>
                                        </div>
                                        <dl class="container-fluid">
                                            <dt>@@User</dt>
                                            <dd>Use instead of Recipent name</dd>

                                            <dt>@@Message</dt>
                                            <dd>Use instead of Message Body</dd>
                                        </dl>
                                        <dl class="container-fluid">

                                            <dd>
                                                Dear MOHSIN,<br />

                                                You are successfully logged in to Attendance System at 03:06 PM on 15/01/2020
                                            </dd>
                                        </dl>
                                        <div class="container-fluid text-center">
                                            <a class="btn  btn-primary mg-b-10" href="#" data-toggle="modal" data-target="#PrimaryModalalert">Key Example</a>

                                        </div>
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>
<div id="PrimaryModalalert" class="modal modal-adminpro-general default-popup-PrimaryModal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-close-area modal-close-df">
                <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
            </div>
            <div class="modal-header header-color-modal bg-color-1">
                <h4 class="modal-title">Key Example</h4>
                <div class="modal-close-area modal-close-df">
                    <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                </div>
            </div>
            <div class="modal-body">
                <div>
                    @Html.Raw((ViewBag.SampleEmail))
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/script-custom-editor.js"></script>
