@model NIDO_TimeAttandance_MVC.Areas.User.Models.ImportExcelResult
@{
    ViewBag.Title = "SaveExcelAttendanceData";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
    .red{
        color:red;
    }
</style>

<div class="stockprice-feed-project-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-6 col-sm-12 col-xs-12">
                <div class="income-dashone-total shadow-reset nt-mg-b-30">
                    <div class="income-dashone-pro">

                        @if (ViewBag.Error != null)
                        {
                            <span class="alert alert-danger">@ViewBag.Error</span>
                        }

                        else
                        {
                            <div class="income-rate-total">

                                <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true" data-cookie-id-table="saveId" data-click-to-select="true" data-toolbar="#toolbar">


                                    <thead>
                                        <tr>
                                            <th> Total Rows</th>
                                            <th> Accept Employee</th>
                                            <th> Rejected Employee</th>
                                        </tr>


                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Model.TotalEmpCount</td>
                                            <td>@Model.AcceptEmpCount</td>
                                            <td>@Model.RejectEmpCount</td>
                                        </tr>
                                    </tbody>
                                </table>

                                <h2 style="font-family:none ; margin-top:10px;">Rejected Attendance Employee Info</h2>
                                <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true" data-cookie-id-table="saveId" data-click-to-select="true" data-toolbar="#toolbar">


                                    <thead>
                                        <tr>

                                            <th>Emp Code</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>In / Out Type</th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        @if (Model.RejectEmpCount == 0)
                                        {
                                            <tr> <td colspan="4"> No Employee Rejected</td></tr>
                                        }
                                        @foreach (var item in Model.RejectEmpAttendList)
                                        {
                                            var date = new DateTime();
                                            var now = DateTime.Now.ToString("MM/dd/yyyy");
                                    <tr>
                                        <td>@item.EmpCode</td>
                                        @if (DateTime.TryParse(item.Date, out date))
                                        {
                                            <td>@item.Date</td>
                                        }
                                        else
                                        {
                                            <td class="red">@item.Date</td>
                                        }

                                        @if (DateTime.TryParse(now + " " + item.Time, out date))
                                        {
                                            <td>@item.Time</td>
                                        }
                                        else
                                        {
                                            <td class="red">@item.Time</td>
                                        }
                                        <td>@item.InOutType</td>

                                    </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


