@model NIDO_TimeAttandance_MVC.Models.ModelLeave

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Theme CSS -->
<link rel="stylesheet" href="~/Assests/Dashboard/assets/stylesheets/theme.css" />
<!-- Skin CSS -->
<link rel="stylesheet" href="~/Assests/Dashboard/assets/stylesheets/skins/default.css" />
<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Ajax.BeginForm("Update", "Leave", new AjaxOptions { HttpMethod = "POST", OnBegin = "OnBeginAjax", OnFailure = "OnFailureAjax", OnSuccess = "OnSuccessAjax" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <div class="col-lg-12">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>Create Company</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Leave Code</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.LeaveCode, new { placeholder = "Please Enter Leave Code", required = "" })
                                        @Html.ValidationMessageFor(model => model.LeaveCode, "", new { @class = "error required" }, "label")
                                        <i class="fa fa-code login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Leave Desc</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.LeaveDsc, new { placeholder = "Please Enter Leave Desc", required = "" })
                                        @Html.ValidationMessageFor(model => model.LeaveDsc, "", new { @class = "error required" }, "label")
                                        <i class="fa fa-clipboard login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>No of days</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.NoOfDays, new { placeholder = "Please Enter no of days", required = "" })
                                        @Html.ValidationMessageFor(model => model.NoOfDays, "", new { @class = "error required" }, "label")
                                        <i class="fa fa-archive login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>How many years Carried forward</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.CarryForwardyearsCount, new { placeholder = "Please Enter Years" })
                                        <i class="fa fa-history login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>How many days would be carried forward</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="login-input-area">
                                        @Html.TextBoxFor(model => model.HowManyCr_Frwd, new { placeholder = "Please Enter no of days" })
                                        <i class="fa fa-forward login-user" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="login-input-head">
                                        <p>Leave Color</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="colorpicker-inner ts-forms mg-b-23">
                                        <div class="tsbox">
                                            <label class="label" hidden>HEX</label>
                                            <label class="color-group" for="hex">
                                                @Html.TextBoxFor(model => model.LeaveColor, new { type = "text", placeholder = "#ff0000", id = "hex" })
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-2"></div>
                                <div class="col-md-4">
                                    <div class="col-md-8">
                                        <div class="switch switch-sm switch-primary">
                                            Is Carried Forward Allow
                                            @Html.CheckBoxFor(model => model.IscarriedForward, new { name = "switch", type = "checkbox", @data_plugin_ios_switch = "" })

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4"></div>
                            <div class="col-lg-8">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-lg">Update Leave</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>



<!-- Vendor -->
<script src="~/Assests/Dashboard/assets/vendor/jquery/jquery.js"></script>
<script src="~/Assests/Dashboard/assets/vendor/nanoscroller/nanoscroller.js"></script>
<!-- Specific Page Vendor -->
<script src="~/Assests/Dashboard/assets/vendor/ios7-switch/ios7-switch.js"></script>
<!-- Theme Base, Components and Settings -->
<script src="~/Assests/Dashboard/assets/javascripts/theme.js"></script>
<!-- Theme Initialization Files -->
<script src="~/Assests/Dashboard/assets/javascripts/theme.init.js"></script>
